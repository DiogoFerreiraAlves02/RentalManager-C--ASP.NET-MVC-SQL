
@{
    ViewData["Title"] = "Listagem de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <main id="main">

        <!-- ======= Services Section ======= -->
        <section id="services" class="services">
            <div class="container">

                <div class="section-title">
                    <span>Clientes</span>
                    <h2>Clientes</h2>
                </div>
                <div class="row">
                    @{ var listaClientes = @Model;
                        foreach (var cli in listaClientes) { 
                            <div class="col-lg-4 col-md-6 align-items-stretch" data-aos="fade-up">
                                <div class="icon-box">
                                    <div class="icon"><i class='bx bxs-user'></i></div>
                                    <h4><a href="/Cliente/Consultar/@cli.Id">@cli.Nome</a></h4>
                                    <p>Morada: <b>@cli.Morada</b></p>
                                </div>
                            </div>
                        }
                    }
                </div>
                </div>
            
        </section><!-- End Services Section -->

    </main><!-- End #main -->
