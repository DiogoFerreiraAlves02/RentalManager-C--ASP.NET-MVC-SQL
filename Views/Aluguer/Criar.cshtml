
@{
    ViewData["Title"] = "Criação de Alugueres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <span>Criar Aluguer</span>
                <h2>Criar Aluguer</h2>
            </div>

            <div class="row" data-aos="fade-up">
                <div class="col-lg-12">
                    <div class="info-box mb-4">
                        <i class='bx bx-purchase-tag-alt'></i>
                        <h3>Aluguer Atual</h3>
                    </div>
                </div>

            </div>

            <div class="row" data-aos="fade-up">

                <div class="col-lg-12">
                    <form action="/Aluguer/Criar" method="post">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                @{var listaClientes = ViewBag.listaClientes;}
                                <select name="Cliente.Id" class="form-control">
                                    @foreach (var cliente in listaClientes) {
                                        <option value="@cliente.Id">@cliente.Nome  |  @cliente.Morada</option>
                                    }
                                </select>


                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                @{var listaFuncionarios = ViewBag.listaFuncionarios;}
                                <select name="Funcionario.Id" class="form-control">
                                    @foreach (var funcionario in listaFuncionarios) {
                                        <option value="@funcionario.Id">@funcionario.Nome  |  @funcionario.NrFuncionario</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            @{var listaProdutos = ViewBag.listaProdutos;}
                            <select name="Produto.Id" class="form-control">
                                @foreach (var produto in listaProdutos) {
                                    <option value="@produto.Id">@produto.Designacao</option>
                                }
                            </select>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6 form-group">
                                <input type="text" name="PrecoDiario" class="form-control" id="PrecoDiario" placeholder="Preço Diário" required />
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="text" class="form-control" name="Caucao" id="Caucao" placeholder="Caução" required />
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6 form-group">
                                <input type="number" name="Dias" class="form-control" id="Dias" placeholder="Dias de Aluguer" step="1" min="0" required />
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="date" class="form-control" name="DataAluguer" id="DataAluguer" placeholder="Data do Aluguer" required />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <select name="Estado" class="form-control">
                                @{var listaEstados = ViewBag.listaEstados;}
                                @foreach (var estado in listaEstados) {
                                    <option value="@estado.Id">@estado.Designacao</option>
                                }
                            </select>
                        </div>
                        <br />
                        <div class="text-center">
                            <input type="submit" name="enviar" value="Criar Aluguer" style="background: #576880; border: 0; padding: 10px 24px; color: #fff; transition: 0.7s;" />
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
