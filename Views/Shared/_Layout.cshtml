<body>

    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-flex align-items-center">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i>Diogo Alves nº748</i>
            </div>
            <div class="social-links d-none d-md-block">
                <i>Tecnologias da Internet III</i>
            </div>
    </section>

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo"><a href="/Portal/Index">InfoRent</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo"><img src="/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="/Portal/Index">Início</a></li>
                    @if (ViewBag.ContaAtiva.NivelAcesso > 0) {
                        <li class="dropdown">
                            <a href="#"><span>Aluguer</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/Aluguer/Listar">Listar</a></li>
                                <li><a href="/Aluguer/Criar">Criar</a></li>
                                <li><a href="/Aluguer/ListarDevolvidos">Listar Finalizados</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Cliente</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/Cliente/Listar">Listar</a></li>
                                <li><a href="/Cliente/Criar">Criar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Funcionário</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/Funcionario/Listar">Listar</a></li>
                                <li><a href="/Funcionario/Criar">Criar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Produto</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/Produto/Listar">Listar</a></li>
                                <li><a href="/Produto/Criar">Criar</a></li>
                            </ul>
                        </li>
                        <li><a class="nav-link scrollto" href="/Conta/Sair">Logout</a></li>
                    }
                    else {
                        <li><a class="nav-link scrollto" href="/Conta/Entrar">Login</a></li>
                    }
                </ul>

                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <!-- AQUI FICA O CONTENTOR -->
    @RenderBody()
    <!-- </CONTENTOR> -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 col-md-6">
                        <div class="footer-info">
                            <h4>Conta Ativa : @ViewBag.ContaAtiva.Nome</h4>
                            <h3>INFORENT</h3>
                            <p>
                                <strong>Email:</strong> diogo.alves.748@my.istec.pt<br>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>INFORENT</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/day-multipurpose-html-template-for-free/ -->
                Designed by Diogo Alves
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="/vendor/aos/aos.js"></script>
